<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="8dp"
    >
    <ImageView
        android:id="@+id/user_img"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:focusableInTouchMode="true"
        android:scaleType="fitXY"
        android:src="@drawable/team_item_test"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp">
        <TextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="用户名"
            android:textSize="17sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/user_apprise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="用户评价"
            android:layout_marginTop="5dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/see_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="浏览"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/see_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XX"
                android:textColor="@color/black"
                android:layout_toRightOf="@+id/see_text" />
            <LinearLayout
                android:id="@+id/apprise_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="17dp"
                    android:src="@drawable/encourage"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:id="@+id/encourage_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/like" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
