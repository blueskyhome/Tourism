<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <ImageView
            android:id="@+id/register_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>


    <!--<de.hdodenhof.circleimageview.CircleImageView-->
    <!--android:layout_width="100dp"-->
    <!--android:layout_height="100dp"-->
    <!--android:layout_above="@+id/account_row"-->
    <!--android:layout_centerHorizontal="true"-->
    <!--android:layout_marginBottom="30dp"-->
    <!--/>-->
    <LinearLayout
        android:id="@+id/account_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/password_row"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号"
            android:textSize="18dp"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/register_account"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:hint="请输入账号"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/password_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/check_password_row"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码"
            android:textSize="18dp"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/register_password"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:hint="请输入密码"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/check_password_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/name_row"
        android:layout_centerHorizontal="true"
        android:paddingRight="30dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认密码"
            android:textSize="18dp"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/check_password"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:hint="请输入密码"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/name_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textSize="18dp"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/name"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:hint="请输入昵称"
            />
    </LinearLayout>

    <Button
        android:id="@+id/register_button"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/name_row"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="注册"
        android:textSize="20dp"
        android:background="@drawable/login_in"
        />


</RelativeLayout>